#Adapted from the amazing Adafruit work
#https://learn.adafruit.com/circuitpython-essentials/circuitpython-digital-in-out
#Circuit Python
#Hardware: Adafruit Trinket M0
#Connections: D0=Neopixels, D1=Up button, D2=Down button

import time
import board
import neopixel
from digitalio import DigitalInOut, Direction, Pull

#NeoPixel setup
pixel_pin = board.A1
num_pixels = 2
pixels = neopixel.NeoPixel(pixel_pin, num_pixels, brightness=0.3, pixel_order=neopixel.RGB)
 
# Switch setup
switch = DigitalInOut(board.D1)
switch.direction = Direction.INPUT
switch.pull = Pull.UP


while True:
    # We could also do "led.value = not switch.value"!
    if switch.value:
        pixel[0] = (30, 0, 20) = False
    else:
        pixel[0] = (30, 0, 20) = True
 
    time.sleep(0.01)  # debounce delay
